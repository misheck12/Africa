<div class="login-form">
  <%
=begin%>
 <h2 class="login-form-h">Log in</h2> 
<%
=end%>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="login-field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email: user@mail.com" ,class: "login-field-input" %>
    </div>

    <div class="login-field">
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password...", class: "login-field-input" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: "login-form-btn" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
