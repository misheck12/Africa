<div>
  <div class="user-ctn">
    <img src="<%= @user.photo %>" alt="image">

    <div class="user-l-info">
      <h5><%= @user.name %></h5>
      <h5>Number of posts : <%= @user.posts_counter %></h5>
    </div>

  </div>
  <% @posts.each do |post| %>
    <%= link_to user_post_path(@user.id, post.id), class: "link-info" do %>
      <div>
        <%= post.title %>
        <%= post.text %>
      </div>
      <div>
        <h5>Comments : <%= post.comments_counter %></h5>
        <h5>Likes : <%= post.likes_counter %></h5>
      </div>
    <% end %>
    <div>
      <% post.comments.each do |comment| %>
        <h4>Username: <%= comment.text %>></h4>
      <% end %>
    </div>
  <% end %>
  <div>
    <button>Pagination</button>
  </div>

</div>
