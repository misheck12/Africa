<%= form_with model: @post, url: user_posts_path(@user), method: :post, class: 'form' do |f| %>
  <div> <%= f.label :title, 'Enter post title' %><br> <%= f.text_field :title %> </div>
  <div> <%= f.label :text, 'Enter post content' %><br> <%= f.text_area :text, size: "60x6" %> </div>
  <div> <%= f.submit "Create Post" %> </div>
<% end %>