<div>
  <div class="user-ctn">
    <img src="<%= @user.photo %>" alt="image">

    <div class="user-l-info">
      <h5><%= @user.name %></h5>
      <h5>Number of posts : <%= @user.posts_counter %></h5>
    </div>

  </div>
  <div>
    <div>
      <h5>Bio</h5>
      <p><%= @user.bio %></p>
    </div>
    <% @user.three_recent_posts.each do |post| %>
      <div>
        <%= link_to user_post_path(@user.id, post.id), class: "link-info" do %>
          <%= post.title %>
          <%= post.text %>
        <% end %>
      </div>
    <% end %>
  </div>
  <div>
    <%= link_to user_posts_path(@user),class: "link-info" do %>
      <button>See all posts</button>
    <% end %>
  </div>
</div>
